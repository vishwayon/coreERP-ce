<cwFramework xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
             xmlns='http://xml.coreerp.com/schema/CwFramework'
             xsi:schemaLocation='http://xml.coreerp.com/schema/CwFramework http://coreerp.com/cwFramework.xsd'>

    <collectionView id="PersonType" type="Master" bindingBO="PersonType" editView="personType/PersonTypeEditForm">        
        <header>Person Type</header>
        <collectionSection>
            <connectionType>
                <companyDB/>
            </connectionType>
            <sql>
                <command>   
                    select person_type_id, person_type_desc, true as edit_not_allowed from tds.person_type order by person_type_desc
                </command>
            </sql>
            <displayFields>
                <displayField columnName="person_type_desc" displayName="Person Type"/>
            </displayFields>
            <editNotAllowed field='edit_not_allowed'/>
        </collectionSection>
    </collectionView>
</cwFramework>
