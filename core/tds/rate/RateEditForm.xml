<cwFramework xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
             xmlns='http://xml.coreerp.com/schema/CwFramework'
             xsi:schemaLocation='http://xml.coreerp.com/schema/CwFramework http://coreerp.com/cwFramework.xsd'>

    <formView id="Rate" type="Master" bindingBO="rate/Rate">
        <header>TDS Rate</header>
        <keyField>rate_id</keyField>
        <!--<newDocEnabled/>
        <deleteDocEnabled/> -->
        <controlSection>
            <dataBinding>
                <field id="section_id" label=" TDS Section" type="int" control="SmartCombo" size="m"  readOnly="OnEdit" >
                    <lookup>
                        <valueMember>section_id</valueMember>
                        <displayMember>section</displayMember>
                        <namedLookup>../core/tds/lookups/Section.xml</namedLookup>
                    </lookup>   
                </field>
                <nextRow/> 
                <field id="person_type_id" label="Person Type" type="int" control="SmartCombo" size="m"  readOnly="OnEdit" >
                    <lookup>
                        <valueMember>person_type_id</valueMember>
                        <displayMember>person_type_desc</displayMember>
                        <namedLookup>../core/tds/lookups/PersonType.xml</namedLookup>
                    </lookup>   
                </field>
                <nextRow/>
                <field id="base_rate_perc" label="Base Rate" type="decimal" control="TextBox" size="s"  readOnly="OnEdit" /> 
                <nextRow/> 
                <field id="ecess_perc" label="Education cess" type="decimal" control="TextBox" size="s"  readOnly="OnEdit" /> 
                <nextRow/>
                <field id="surcharge_perc" label="Surcharge Percentage" type="decimal" control="TextBox" size="s" readOnly="OnEdit"  /> 
                <nextRow/>
                <field id="effective_from" label="Effective From" type="date" control="Date" size="s"  readOnly="OnEdit" /> 
                <nextRow/> 
            </dataBinding> 
        </controlSection>
    </formView>
</cwFramework>