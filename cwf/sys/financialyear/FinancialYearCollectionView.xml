<cwFramework xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
             xmlns='http://xml.coreerp.com/schema/CwFramework'
             xsi:schemaLocation='http://xml.coreerp.com/schema/CwFramework http://coreerp.com/cwFramework.xsd'>
    
    <collectionView id="FinancialYear" type="Master" bindingBO="FinancialYear" editView="financialyear/FinancialYearEditForm">        
        <header>Financial Year</header>
        <collectionSection>
            <connectionType>
                <companyDB/>
            </connectionType>
            <sql>
                <command>
                    SELECT finyear_id,finyear_code,year_begin,year_end,
                    case when year_close::boolean then 'Closed' else 'Open' end year_close FROM sys.finyear order by year_begin desc
                </command>
            </sql>
            <displayFields>
                <displayField columnName="finyear_code" displayName="Financial Year"/>
                <displayField columnName="year_begin" displayName="Year Begins From" format="Date"/>
                <displayField columnName="year_end" displayName="Year Ends On" format="Date"/>
                <displayField columnName="year_close" displayName="Closed"/>
            </displayFields>
        </collectionSection>
    </collectionView>   
</cwFramework>
